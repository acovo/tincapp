<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

        <TextView
            style="@style/AppTheme.SectionTitle"
            android:text="@string/configure_activity_title_configuration_server"/>

        <fragment
            android:id="@+id/configure_activity_configuration_sftp_server_fragment"
            android:name="org.pacien.tincapp.activities.configure.ConfigurationFtpServerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

		<TextView
			style="@style/AppTheme.SectionTitle"
			android:text="@string/configure_activity_title_tools"/>

		<fragment
			android:id="@+id/configure_activity_tools_fragment"
			android:name="org.pacien.tincapp.activities.configure.ToolsFragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

		<TextView
			style="@style/AppTheme.SectionTitle"
			android:text="@string/configure_activity_title_internal_paths_info"/>

		<fragment
			android:id="@+id/configure_activity_path_info_fragment"
			android:name="org.pacien.tincapp.activities.configure.PathInfoFragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</ScrollView>
